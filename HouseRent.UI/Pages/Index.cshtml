@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = null;


}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />






<div class="card text-center w-50" style="margin-left:25%; margin-top:10%">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs nav-justified" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="login-tab" data-toggle="tab" href="#login" role="tab" aria-controls="login" aria-selected="true">Login</a>

            </li>
            <li class="nav-item">
                <a class="nav-link" id="signup-tab" data-toggle="tab" href="#signup" role="tab" aria-controls="signup" aria-selected="false">Signup</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="AdminLogin-tab" data-toggle="tab" href="#AdminLogin" role="tab" aria-controls="AdminLogin" aria-selected="false">Admin Login</a>
            </li>

        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
                @* <h5 class="fw-bolder text-center">Login</h5>*@
                <form method="post" asp-page-handler="Login">
                    <div class="form-group row">

                        <div class="col-sm-12">
                            <input type="text" class="form-control" asp-for="Account.UserName" placeholder="Username">
                        </div>
                    </div>
                    <div class="form-group row">

                        <div class="col-sm-12">
                            <input type="password" class="form-control" asp-for="Account.Password" placeholder="Password">
                            @* <span asp-validation-for="Account.Password" class="text-danger"></span>*@
                        </div>
                    </div>

                    <div class="form-group row text-left">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Sign in</button>
                        </div>
                    </div>
                </form>


            </div>
            <div class="tab-pane fade" id="signup" role="tabpanel" aria-labelledby="signup-tab">

                <form method="post" asp-page-handler="Signup">
                    <div class="row">

                        <div class="col-md-12 ">
                            <div class="form-group">

                                <input type="text" class="form-control" placeholder="Username" asp-for="Account.UserName">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="password" class="form-control" asp-for="Account.Password" placeholder="Password">
                                <span asp-validation-for="Account.Password" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="password" class="form-control" asp-for="Account.ConfirmPassword" placeholder="Retype Password">
                                <span asp-validation-for="Account.ConfirmPassword" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Email" asp-for="Account.Email">
                                <span asp-validation-for="Account.Email" class="text-danger"></span>

                            </div>
                        </div>

                    </div>

                    <button type="submit" class="btn btn-info btn-fill">SignUp</button>
                    <div class="clearfix"></div>
                </form>



            </div>
            <div class="tab-pane fade" id="AdminLogin" role="tabpanel" aria-labelledby="AdminLogin-tab">
                @* <h5 class="fw-bolder text-center">Login</h5>*@
                <form method="post" asp-page-handler="AdminLogin">
                    <div class="form-group row">

                        <div class="col-sm-12">
                            <input type="text" class="form-control" asp-for="Account.UserName" placeholder="Username">
                        </div>
                    </div>
                    <div class="form-group row">

                        <div class="col-sm-12">
                            <input type="password" class="form-control" asp-for="Account.Password" placeholder="Password">
                            @* <span asp-validation-for="Account.Password" class="text-danger"></span>*@
                        </div>
                    </div>

                    <div class="form-group row text-left">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Sign in</button>
                        </div>
                    </div>
                </form>


            </div>

        </div>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>