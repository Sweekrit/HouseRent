@page
@model HouseRent.UI.Pages.Users.UserProfileModel
@{
}


<div id="app">
    <div class="row">
        <div class="col-md-8 pb-2">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="title">User Registration</h5>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="Sessiondata.Id" />
                    <input type="hidden" asp-for="Sessiondata.Email" />

                    <input type="hidden" asp-for="Sessiondata.UserName" />
                    <div class="row pb-3">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>User Name</label>
                                <input type="text" class="form-control" placeholder="UserName" v-model="userInfo.userName" disabled>
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" placeholder="Email" v-model="userInfo.email" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row pb-3">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" class="form-control" placeholder="First Name" v-model="userInfo.firstName" :disabled="disabled">
                            </div>
                        </div>
                        <div class="col-md-6 pl-1">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" class="form-control" placeholder="Last Name" v-model="userInfo.lastName" :disabled="disabled">
                            </div>
                        </div>
                    </div>
                    <div class="row pb-2">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="number" class="form-control" placeholder="Mobile Number" v-model.number="userInfo.phoneNumber" :disabled="disabled">
                            </div>
                        </div>
                    </div>

                    <div class="row pb-2">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" class="form-control" placeholder="Permanent Address" v-model="userInfo.address" :disabled="disabled">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info btn-fill pull-right" v-if="!dataAvailable && !disabled" @@click="createUser">Add User</button>
                    <button type="submit" class="btn btn-info btn-fill pull-right" v-if="dataAvailable && disabled " @@click="editUser">Edit User</button>
                    <button type="submit" class="btn btn-info btn-fill pull-right" v-if="dataAvailable && !disabled" @@click="updateUser">Update User</button>
                    <div class="clearfix"></div>


                </div>
            </div>
        </div>
        <div class="col-md-4" v-if="dataAvailable">
            <div class="card">
               
                <div class="card-body" >
                    <div class="author text-center">
                        <a href="#">
                            @*<img class="avatar border-gray" alt="...">*@
                            <h5 class="title text-capitalize text-center">{{user.firstName}} {{user.lastName}}</h5>
                        </a>
                        <p class="description"><small>
    @@{{user.userName}} <span class="pl-5">
    {{user.email}}
</span>


</small>
                        </p>
                    </div>
                    <p class="description">
                        <ul>
                            <li class="pb-2 pt-2">Phone Number: {{user.phoneNumber}}</li>
                            <li class="pb-2">Address: {{user.address}}</li>
                            <li class="pb-2">Rooms Allocated:</li>

                            <ul  v-for="item in roomArray">
                                <li>{{item.roomDesc}} - {{item.sublocation}} - {{item.location}} - {{item.startDate}}</li>
                            </ul>

                        </ul>
                    </p>
                </div>
                <hr>
                <div class="button-container">
                    <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                        <i class="fab fa-facebook-f"></i>
                    </button>
                    <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                        <i class="fab fa-twitter"></i>
                    </button>
                    <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                        <i class="fab fa-google-plus-g"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
  
</div>

@section Scripts{ 

    <script src="~/js/VueUser/userInfo.js"></script>
}

             
