<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card strpied-tabled-with-hover">
                <div class="card-header ">
                    <h4 class="card-title">Available Users</h4>
                    <p class="card-category">Here is a subtitle for this table</p>
                </div>
                <div class="card-body table-full-width table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Role</th>

                        </thead>
                        <tbody>
                            @if(Model.UsersAvailable != null)
                            {

                                @foreach (var item in Model.UsersAvailable)
                                {
                                   
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>USER</td>
                                        <td>

                                            <form method="post" asp-route-id="@item.Id" >


                                            <button class="btn btn-secondary">Make Admin</button>
                                            </form>


                                </td>

                                </tr>

                            }

                            }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card strpied-tabled-with-hover">
