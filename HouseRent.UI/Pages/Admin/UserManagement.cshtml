@page
@model HouseRent.UI.Pages.Admin.UserManagementModel
@{
}

<div id="app">

    <div class="content ">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Striped Table with Hover</h4>
                            <p class="card-category">Here is a subtitle for this table</p>
                        </div>
                        

                        
                        <div class="card-body table-full-width table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                <th>ID</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>PhoneNumber</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Username</th>
                                </thead>
                                <tbody>
                                    <tr v-for="(item,index) in customers" @@click="getUser(item.id)">
                                        <td>{{index+1}}</td>
                                        <td>{{item.firstName}}</td>
                                        <td>{{item.lastName}}</td>
                                        <td>{{item.phoneNumber}}</td>
                                        <td>{{item.address}}</td>
                                        <td>{{item.email}}</td>
                                        <td>{{item.userName}}</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                </div>
                <div class="row">
                <div class="col-md-12" v-if="customerSelected">

                    
                        <div class="card">

                            <div class="card-body">
                                <div class="author text-center">
                                    <a href="#">
                                        @*<img class="avatar border-gray" alt="...">*@
                                        <h5 class="title text-capitalize text-center">{{customer.firstName}} {{customer.lastName}}</h5>
                                    </a>
                                    <p class="description">
                                        <small>
                                            @@{{customer.userName}} <span class="pl-5">
                                                {{customer.email}}
                                            </span>


                                        </small>
                                    </p>
                                </div>
                                <p class="description">
                                    <ul>
                                        <li class="pb-2 pt-2">Phone Number: {{customer.phoneNumber}}</li>
                                        <li class="pb-2">Address: {{customer.address}}</li>
                                        <li class="pb-2">Rooms Allocated:</li>

                                        <ul v-for="item in customer.roomDetail">
                                            <li>{{item.roomDesc}} - {{item.sublocation}} - {{item.location}} - {{item.startDate}}</li>
                                        </ul>

                                    </ul>
                                </p>

                                <button type="submit" class="btn btn-info btn-fill pull-right" @@click="RemoveUser(customer.id)">Remove User</button>

                            </div>
                            
                        </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>




@section scripts{

    <script src="~/js/VueAdmin/users.js"></script>

}