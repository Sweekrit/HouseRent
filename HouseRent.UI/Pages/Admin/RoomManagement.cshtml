                                <th>Customer Name</th>
                                <th>Room Number</th>
                                <th>Sublocation</th>
                                <th>Location</th>
                                </thead>
                                <tbody>
                                    <tr v-for="(item,index) in rooms">
                                        <td>{{index+1}}</td>
                                        <td>{{item.customerName}}</td>
                                        <td>
                                            <ul v-for="data in item.roomDetail">
                                                <li @@click="getRoom(data.roomId)">{{data.roomDesc}} <span @@click="DeleteRoom(data.roomId)">X</span></li>
                                            </ul>
                                        </td>
                                        <td>
                                            <ul v-for="data in item.roomDetail">
                                                <li>{{data.sublocation}}        </li>
                                            </ul>
                                        </td>
                                        <td>
                                            <ul v-for="data in item.roomDetail">
                                                <li>{{data.location}}        </li>
                                            </ul>
                                        </td>
                                        
                                    </tr>

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
        </div>
