                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label for="inputState">Tenant Name</label>
                                        <select id="inputState" class="form-control" v-model="roomInfo.tenantId">
                                            <option value="">Choose...</option>
                                            <option v-for="items in customers" v-bind:value="items.id">{{items.firstName}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                        <label for="inputState">Location</label>
                                        <select id="inputState" class="form-control" @@change="selectedLocation" v-model="locationId">
                                            <option value="">Choose...</option>
                                            <option v-for="item in sublocations" v-bind:value="item.locationId">{{item.locationName}}</option>
                                        </select>
                                    </div>
                                </div>

                                </div>
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label for="inputState">Sub-Location</label>
                                        <select id="inputState" class="form-control" v-model="roomInfo.subLocationId">
                                            <option value="">Choose...</option>
                                            <option v-for="item in selProd" v-bind:value="item.id">{{item.sublocationName}}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
