@page
@model HouseRent.UI.Pages.Admin.IndexModel
@{
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">All Bills Available</h4>
                        <p class="card-category">lets look at all the bills.</p>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>Name</th>
                            <th>Room Description</th>
                            <th>Bill For Month</th>
                            <th>Total Amount</th>
                            </thead>
                            <tbody>
                                    @foreach (var item in Model.Payments)
                                    {
                               <tr>
                                        <td>@item.FirstName @item.LastName</td>
                                        <td>
                                            <ul>
                                                @foreach (var data in item.ListRooms)
                                                {
                                                    <li>@data.RoomDesc - @data.SublocationName - @data.LocationName</li>
                                                }
                                            </ul>
                                        </td>

                                            <td>
                                                <ul>
                                        @foreach (var items in item.ListRooms)
                                        {
                                            @foreach (var bil in items.Bills)
                                            {
                                                    <li>
                                                @bil.StartingDate.ToString("MM/yy")

                                                    </li>
                                            }
                                        }
                                                </ul>
                                                </td>
                                            <td>
                                                <ul>
                                                @foreach (var items in item.ListRooms)
                                                {
                                                    @foreach (var bil in items.Bills)
                                                    {
                                                    <li>

                                                         @bil.Amount
                                                    </li>

                                                    }
                                                }
                                                </ul>
                                            </td>



                                </tr>
                                    }
                                    
                                 
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>





@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
}